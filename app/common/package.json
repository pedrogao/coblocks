{
  "name": "@coblocks/common",
  "version": "0.0.1",
  "description": "common package for coblocks microservices",
  "author": "pedrogao",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "dist/coblocks-common.cjs",
  "module": "dist/coblocks-common.esm.js",
  "types": "dist/app/common/src/index.d.ts",
  "exports": {
    "source": {
      "import": "./src"
    },
    "default": {
      "import": "./dist/coblocks-common.esm.js",
      "require": "./dist/coblocks-common.cjs",
      "types": "./dist/app/common/src/index.d.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "jest"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "argon2": "^0.31.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
